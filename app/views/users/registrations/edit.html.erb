<% content_for(:page_title, "パスワードを変更") %>
<% content_for(:show_back_button, true) %>

<div class="max-w-md mx-auto px-4 py-6 space-y-6">

  <div class="card-notebook bg-white p-5 space-y-4">
    <h2 class="font-heading text-forest-green font-semibold text-lg">パスワードを変更</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="flex flex-col space-y-2 mt-4">
        <%= f.label :current_password, "現在のパスワード", class: "text-wood-dark text-sm font-medium" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "input-field rounded-lg border border-gray-400" %>
      </div>

      <div class="flex flex-col space-y-2 mt-4">
        <%= f.label :password, "新しいパスワード", class: "text-wood-dark text-sm font-medium" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "変更する場合のみ入力", class: "input-field rounded-lg border border-gray-400" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-400"><%= @minimum_password_length %>文字以上</p>
        <% end %>
      </div>

      <div class="flex flex-col space-y-2 mt-4">
        <%= f.label :password_confirmation, "新しいパスワード(確認用)", class: "text-wood-dark text-sm font-medium" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field rounded-lg border border-gray-400" %>
      </div>

      <div class="pt-8">
        <%= f.submit "変更を保存", class: "btn btn-primary w-full text-center" %>
      </div>
    <% end %>

    <div class="pt-4">
      <%= link_to "戻る", user_path(current_user), class: "btn btn-secondary w-full text-center" %>
    </div>
  </div>
</div>

<style>
.input-field {
  @apply w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-sage focus:border-sage;
}
</style>
