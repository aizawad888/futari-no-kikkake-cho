<div class="text-center space-y-2 mt-10">
  <h1 class="font-fui text-3xl text-wood-dark">
    <%= link_to "ふたりの察し手帳", root_path %>
  </h1>
  <p class="text-sm text-sage">
    小さな気づきを、ふたりで貯めていく
  </p>
</div>

<div class="min-h-[70vh] flex items-center justify-center px-4">
  <div class="w-full max-w-md bg-white rounded-xl shadow p-6 space-y-6">

    <%= render "users/shared/error_messages", resource: resource %>

    <h2 class="text-xl font-semibold text-forest-green text-center">
      パスワードを変更
    </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "新しいパスワード" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
              class: "w-full border rounded-lg px-3 py-2 text-sm" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full border rounded-lg px-3 py-2 text-sm" %>
      </div>

      <div class="actions mt-4">
        <%= f.submit "パスワードを変更する", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="text-sm text-center pt-4">
      <%= link_to "ログイン画面に戻る", new_user_session_path, class: "text-sage underline" %>
    </div>

  </div>
</div>
